<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cmd">
		<jta-data-source>java:/jpaFacturaDS</jta-data-source>
		
		<class>cursojpa.facturacion.entidades.Categoria</class>
		<class>cursojpa.facturacion.entidades.Cliente</class>
		<class>cursojpa.facturacion.entidades.Factura</class>
		<class>cursojpa.facturacion.entidades.FacturaDetalle</class>
		<class>cursojpa.facturacion.entidades.Inventario</class>
		<class>cursojpa.facturacion.entidades.Menu</class>
		<class>cursojpa.facturacion.entidades.MenuRol</class>
		<class>cursojpa.facturacion.entidades.Producto</class>
		<class>cursojpa.facturacion.entidades.Rol</class>
		<class>cursojpa.facturacion.entidades.Usuario</class>
		<class>cursojpa.facturacion.entidades.UsuarioRol</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
		
	</persistence-unit>
</persistence>
