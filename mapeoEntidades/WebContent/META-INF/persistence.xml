<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cursojpa">
		<jta-data-source>java:/cursojpa</jta-data-source>

		<class>cursos.jpa.entidades.Cliente</class>
		<class>cursos.jpa.entidades.Empleado</class>
		<class>cursos.jpa.entidades.Departamento</class>
		<class>cursos.jpa.entidades.menu.MenuCobis</class>
		<class>cursos.jpa.entidades.menu.MenuRol</class>				
		<class>cursos.jpa.entidades.menu.Rol</class>
		<class>cursos.jpa.entidades.Evento</class>
		
			<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
